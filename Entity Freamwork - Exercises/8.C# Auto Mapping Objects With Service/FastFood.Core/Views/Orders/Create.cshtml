@model FastFood.Core.ViewModels.Orders.CreateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}
<h1 class="text-center">Create Order</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" asp-controller="Orders" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Customer</label>
        <input type="text" class="form-control" id="customer" placeholder="Customer..." name="customer">
    </div>
    <div class="form-group">
        <label for="employee">Employee Name</label>

        @foreach (var item in Model.Employees)
        {
            <input type="hidden" name="EmployeeId" value="@item" />
        }

        <select id="employee" class="form-control" name="EmployeeName">
            @foreach (var employee in Model.EmployeesName)
            {
                <option value="@employee">@employee</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="item">Item Name</label>

        @foreach (var item in Model.Items)
        {
            <input type="hidden" name="ItemId" value="@item" />
        }

        <select id="item" class="form-control" name="ItemName">
            @foreach (var item in Model.ItemsName)
            {
                <option value="@item">@item</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" step="1" min="11" class="form-control" id="quantity" placeholder="Quantity..." name="quantity">
    </div>
    <select id="type" class="form-control" name="Type">
            @foreach (var item in Model.Type)
            {
                <option value="@item">@item</option>
            }
        </select>
    <hr class="bg-secondary half-width" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn ">Create</button>
        <button asp-controller="Orders" asp-action="All" class="btn btn-info">All</button>
    </div>
</form>